<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/basement"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:alpha="0.85">

    <RelativeLayout
        android:id="@+id/items_management_frame"
        android:layout_width="173.925dp"
        android:layout_height="45dp"
        android:background="@drawable/items_management_frame_light">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/add_button_frame"
        android:layout_width="47.25dp"
        android:layout_height="56.25dp"
        android:background="@drawable/items_management_button_light"
        android:layout_alignTop="@id/items_management_frame"
        android:layout_marginTop="22.5dp"
        android:layout_toEndOf="@id/add_button_frame"
        android:layout_alignStart="@id/items_management_frame"
        android:layout_marginStart="16.875dp">

        <ImageButton
            android:id="@+id/add_button"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:background="@drawable/add_light"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/add_mark"
        android:layout_width="47.25dp"
        android:layout_height="23.625dp"
        android:background="@drawable/mark_down_light"
        android:layout_below="@id/add_button_frame"
        android:layout_alignStart="@id/add_button_frame" />

    <RelativeLayout
        android:id="@+id/delete_button_frame"
        android:layout_width="47.25dp"
        android:layout_height="56.25dp"
        android:background="@drawable/items_management_button_light"
        android:layout_alignTop="@id/items_management_frame"
        android:layout_marginTop="22.5dp"
        android:layout_alignEnd="@id/items_management_frame"
        android:layout_marginEnd="43.425dp">

        <ImageButton
            android:id="@+id/delete_button"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:background="@drawable/delete_light"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/delete_mark"
        android:layout_width="47.25dp"
        android:layout_height="23.625dp"
        android:background="@drawable/mark_down_light"
        android:layout_below="@id/delete_button_frame"
        android:layout_alignStart="@id/delete_button_frame" />
</RelativeLayout>